<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/titlebarcolor</item>
        <item name="colorPrimaryDark">@color/titlebarcolor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleText">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="titlebartext">
        <item name="android:textColor">@color/titlecolor</item>
        <item name="android:textSize">@dimen/titlesize</item>
        <item name="android:fontFamily">@font/humaskingtape</item>
        <item name="android:scaleX">1.5</item>

    </style>

    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="content">
        <item name="android:textSize">@dimen/contentSize</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="bartext">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/titlesize</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="subTitleText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/titlebarcolor</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeListStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/homeListSize</item>
    </style>
</resources>
