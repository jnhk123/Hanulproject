<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/titlebarcolor">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/back"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/bartext"
            style="@style/bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/allbackg"
            android:text="게시글 작성" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content"
            android:text="제목: "/>

        <EditText
            android:id="@+id/cpmtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="제목을 입력하세요"
            android:inputType="textPersonName"
            style="@style/content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/content"
            android:text="내용 "/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <EditText
            android:id="@+id/cpmcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/content"
            android:gravity="top"
            android:hint="내용을 입력하세요"
            android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진첨부"/>

        <TextView
            android:id="@+id/cpmfilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파일이름" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:id="@+id/modify"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_on"
            android:text="등록"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:onClick="btnAddClicked"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_gray"
            android:text="취소"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>