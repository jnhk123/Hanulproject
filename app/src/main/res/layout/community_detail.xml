<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/titlebarcolor">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/back"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/bartext"
            style="@style/bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시판" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmdtitle"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시판 제목" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:padding="3dp"
        android:layout_gravity="right"
        android:gravity="center">
        <Button
            android:id="@+id/modify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/modify_b"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/cancel_b"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cmdImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cmdcontent"
                style="@style/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="게시판 글" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자 : "
                android:layout_marginLeft="10dp"
                style="@style/content"
                />

            <TextView
                android:id="@+id/cmdwriter"
                style="@style/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부파일 : "
                style="@style/content"
                />

            <TextView
                android:id="@+id/cmdfilename"
                style="@style/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파일이름" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부파일"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>