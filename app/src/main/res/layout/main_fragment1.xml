<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/main_weather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
            android:id="@+id/weather_pic_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/weather_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ex_sun"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/weather_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="위치"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tfu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3"
            >
            <TextView
                android:id="@+id/airtemp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="기온" />
            <TextView
                android:id="@+id/finedust"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="미세먼지"
                android:gravity="center|left"/>
            <TextView
                android:id="@+id/ultrafinedust"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="초미세먼지"
                android:gravity="center|left"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/setTemperatures"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="현재 기온"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/setFinedust"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="현재 미세먼지"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/setUltrafinedust"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="현재 초미세먼지"
                android:gravity="center|left"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_on"
            android:textColor="@color/allbackg"
            android:layout_marginRight="10dp"
            style="@style/subTitleText"

            android:text="우리집 등록 버튼"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">
        <ListView
            android:id="@+id/my_home_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </ScrollView>
</LinearLayout>