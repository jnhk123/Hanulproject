<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cmi_writer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="글쓴이 : "
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cmi_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="11dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="내용"/>

        <EditText
            android:id="@+id/cmi_modify_content"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="수정내용"
            android:textSize="13dp" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/cmi_modify_insert"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="11dp"
            android:background="@drawable/btn_on"
            android:textColor="@color/basictxtcolor"
            android:text="등록" />

        <Button
            android:id="@+id/cmi_modify"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textSize="11dp"
            android:background="@drawable/btn_on"
            android:textColor="@color/basictxtcolor"
            android:text="수정" />

        <Button
            android:id="@+id/cmi_delete"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textSize="11dp"
            android:background="@drawable/btn_on"
            android:textColor="@color/basictxtcolor"
            android:text="삭제" />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>