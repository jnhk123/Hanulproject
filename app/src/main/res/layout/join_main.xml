<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbackg"
    tools:context=".join.Join_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/titlebarcolor">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"
            android:paddingLeft="10dp" />

        <TextView
            style="@style/bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="회원가입" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/titlebarcolor"
                android:text="이름"
                android:textSize="@dimen/contentSize"/>
            <EditText
                android:id="@+id/joinName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="@dimen/contentSize"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/titlebarcolor"
                android:text="아이디"
                android:textSize="@dimen/contentSize"/>

            <EditText
                android:id="@+id/joinId"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:textSize="@dimen/contentSize" />

            <Button
                android:id="@+id/idcheck"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_on"
                android:text="중복확인"
                android:textColor="@color/allbackg"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/idcompl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사용가능한 아이디입니다."
                android:textColor="@color/complete"
                android:textSize="13dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/idfail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="중복된 아이디가 존재합니다."
                android:textColor="@color/error"
                android:textSize="13dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/titlebarcolor"
                android:text="이메일"
                android:textSize="@dimen/contentSize"/>
            <EditText
                android:id="@+id/joinEmail"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="@dimen/contentSize"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/titlebarcolor"
                android:text="비밀번호"
                android:textSize="@dimen/contentSize"/>
            <EditText
                android:id="@+id/joinPw"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="@dimen/contentSize"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/titlebarcolor"
                android:text="비밀번호 확인"
                android:textSize="@dimen/contentSize"/>
            <EditText
                android:id="@+id/joinPwr"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textSize="@dimen/contentSize"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/jpwcompl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="비밀번호가 일치합니다."
                android:textColor="@color/complete"
                android:textSize="13dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/jpwfail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="비밀번호 불일치합니다."
                android:textColor="@color/error"
                android:textSize="13dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="30dp"
            android:text="@string/joinContent"
            android:textSize="13dp"
            />

        <ToggleButton
            android:id="@+id/checkBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/noncheck"
            android:textOff=" "
            android:textOn=" " />
    </LinearLayout>

    <Button
        android:id="@+id/realJoin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_gray"
        android:text="가입하기"
        android:textSize="@dimen/btnSize"
        android:textColor="@color/black" />

</LinearLayout>